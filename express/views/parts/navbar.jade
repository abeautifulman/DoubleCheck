nav.navbar.navbar-static-top.header-navbar
    .header-navbar-mobile
        .header-navbar-mobile__menu
            button.btn(type="button")
                i.fa.fa-bars
        .header-navbar-mobile__title
            span= page
        .header-navbar-mobile__settings.dropdown
                a.btn.dropdown-toggle(href='', data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                    i.fa.fa-power-off
                ul.dropdown-menu.dropdown-menu-right
                    li
                        a(href="#") Log Out
    .navbar-header
        a.navbar-brand(href="/")
            .logo.text-nowrap
                .logo__img
                    i.fa.fa-rocket
                span.logo__text Mars Oasis 

    .topnavbar
        ul.nav.navbar-nav.navbar-left
            li(class=page=='Dashboard' ? 'active' : '')
                a(href="/")
                    span Dashboard 
            li(class=page=='Control' ? 'active' : '')
                a(href="/control")
                    span Control 
            li(class=page=='Status' ? 'active' : '')
                a(href="/status")
                    span Status 
            li(class=page=='Data' ? 'active' : '')
                a(href="/info")
                    span Data 
            li(class=page=='About' ? 'active' : '')
                a(href="/about")
                    span About 
        ul.userbar.nav.navbar-nav
            li.dropdown
                a.userbar__settings.dropdown-toggle(href='', data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                    i.fa.fa-power-off
                ul.dropdown-menu.dropdown-menu-right
                    li
                        a(href="/login") Log Out
