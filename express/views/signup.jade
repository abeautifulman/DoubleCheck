  body
    .container
      header.codrops-header
        h1
          | Signup for DoubleCheck 
          span You're almost ready to start! 
      section.content.bgcolor-4
        h2 Profile Information  
        form.login_form(action='/signup' method='post')
            - if (error)
                .alert.alert-warning(role="alert")
                    #alert
                        h5= error
            span.input.input--madoka
              input#input-31.input__field.input__field--madoka(type='text', name="name")
              label.input__label.input__label--madoka(for='input-31')
                svg.graphic.graphic--madoka(width='100%', height='100%', viewbox='0 0 404 77', preserveaspectratio='none')
                  path(d='m0,0l404,0l0,77l-404,0l0,-77z')
                span.input__label-content.input__label-content--madoka Name
            span.input.input--madoka
              input#input-32.input__field.input__field--madoka(type='text', name="email")
              label.input__label.input__label--madoka(for='input-32')
                svg.graphic.graphic--madoka(width='100%', height='100%', viewbox='0 0 404 77', preserveaspectratio='none')
                  path(d='m0,0l404,0l0,77l-404,0l0,-77z')
                span.input__label-content.input__label-content--madoka Email
            span.input.input--madoka
              input#input-33.input__field.input__field--madoka(type='password', name="password")
              label.input__label.input__label--madoka(for='input-33')
                svg.graphic.graphic--madoka(width='100%', height='100%', viewbox='0 0 404 77', preserveaspectratio='none')
                  path(d='m0,0l404,0l0,77l-404,0l0,-77z')
                span.input__label-content.input__label-content--madoka Password
        br
        button#signup-button.btn.btn-default Signup 
    // /container
    script(src='/js/signup/classie.js')
    script.
      (function() {
      // trim polyfill : https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/String/Trim
      if (!String.prototype.trim) {
      (function() {
      // Make sure we trim BOM and NBSP
      var rtrim = /^[\\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g;
      String.prototype.trim = function() {
      return this.replace(rtrim, '');
      };
      })();
      }
      [].slice.call( document.querySelectorAll( 'input.input__field' ) ).forEach( function( inputEl ) {
      // in case the input is already filled..
      if( inputEl.value.trim() !== '' ) {
      classie.add( inputEl.parentNode, 'input--filled' );
      }
      // events:
      inputEl.addEventListener( 'focus', onInputFocus );
      inputEl.addEventListener( 'blur', onInputBlur );
      } );
      function onInputFocus( ev ) {
      classie.add( ev.target.parentNode, 'input--filled' );
      }
      function onInputBlur( ev ) {
      if( ev.target.value.trim() === '' ) {
      classie.remove( ev.target.parentNode, 'input--filled' );
      }
      }
      })();
